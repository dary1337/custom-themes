{
     "manifest_version": 3,
     "name": "Custom Themes",
     "version": "1.0",
     "description": "Extension for applying custom themes to selected websites by yuri",
     "permissions": ["activeTab", "storage"],
     "action": {
          "default_popup": "index.html"
     },
     "content_scripts": [
          {
               "matches": ["<all_urls>"],
               "js": ["src/main.js"],
               "run_at": "document_start"
          }
     ]
}
